<%- include("partials/header.ejs") %>
  <h1 id="text-note">Today task!</h1>
  </div>
  </div>
  <div class="row align-items-center justify-content-center">
    <div class="card col-md-5" id="card">
      <div>
        <button type="button" class="btn col-md-3" id="button-create-task">
          Today
        </button>
        <a href="work">
          <button type="button" class="btn col-md-3" id="button-create-task">
            Work
          </button>
        </a>
      </div>
      <div class="card-body">
        <% if (locals.taskDisplay) { %>
          <% taskDisplay.forEach((taskDisplay, index)=> { %>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="flexCheck<%= index %>"
                data-task-index="<%= index %>" />
              <label class="form-check-label" for="flexCheck<%= index %>" id="checkTask<%= index %>">
                <%= taskDisplay %>
              </label>
            </div>
            <% }) %>
              <% } %>
      </div>
      <button type="button" class="btn col-md-3" data-bs-toggle="modal" data-bs-target="#createTaskModal"
        id="button-create-task">
        New task!
      </button>

      <!-- Modal -->
      <div class="modal fade" id="createTaskModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">
                Create new task!
              </h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <form action="/submit" method="post" id="createTaskForm">
                  <input type="text" class="form-control" name="task" id="taskCreateInput"
                    placeholder="Task description..." />
                </form>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                Cancel
              </button>
              <button type="submit" form="createTaskForm" value="submit" class="btn" id="button-create-task">
                Create task!
              </button>
              <%- include("partials/footer.ejs") %>